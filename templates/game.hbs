<div id="game-page">
  {{#if (greaterThan game.currentPhase 0)}}
    {{#if (and (equal player.id currentPlayer.id) )}}
      <h1>{{phase.name}}</h1>

      <p class="phase-instructions">{{phase.instructions}}</p>
    {{else if (and (equal game.currentTeam player.team) (greaterThan game.currentPhase 0))}}
      <h1>Guess It</h1>
    {{else}}
      <h1>Wait...</h1>
    {{/if}}
  {{else}}
    <p class="phase-instructions">{{phase.instructions}}</p>
  {{/if}}

  {{#if game.started}}
    <div id="timer">{{formatClock (timeRemaining game)}}</div>
  {{/if}}

  {{#if (and (equal player.id currentPlayer.id) (greaterThan game.currentPhase 0))}}
    {{#if ../game.started}}
      <div class="current-word">
        {{game.currentWord}}
      </div>
      <a class="button correct" href="/game/{{game._id}}/correct-word">Correct</a>
      <a class="button skip" href="/game/{{game._id}}/skip-word">Skip</a>
    {{else}}
      <a class="button start" href="/game/{{game._id}}/start-round">Ready</a>
      {{> team_list}}
    {{/if}}

  {{else}}
    {{> team_list}}
  {{/if}}

  {{#if (readyToStart game)}}
    <a class="button" href="/game/{{game._id}}/next-phase">Start Game</a>
  {{/if}}

  {{!--{{> debug_panel}}--}}

  {{!--<a href="/game/{{game._id}}/delete">Delete Game</a>--}}
</div>