<div class="index">
  <h1>Welcome to SaladBowl</h1>
  <hr>
  <a class="button" href="/new-game">New Game</a>

  {{#if games}}
    <hr>
    <h2>Recent Games</h2>

    <div class="recent-games">
      {{#each games}}
        <div>
          <a href="/game/{{this._id}}">{{or this.name this._id}}</a>
        </div>
      {{/each}}
    </div>
  {{/if}}

</div>

